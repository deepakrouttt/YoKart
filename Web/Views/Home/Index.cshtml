@using Domain.Models
@model List<Product>
@{
    ViewData["Title"] = "Home";
}

<div class="row" id="product-list">
    @foreach(var item in Model)
    {
        <div class="col-sm-6 col-xl-3">
            <div class="card overflow-hidden rounded-2">
                <div class="position-relative">
                    <a asp-action="Product" asp-route-id="@item.ProductId">
                        <img src="~/images/products/@item.ProductImage" class="card-img-top rounded-0" alt="...">
                    </a>
                    <a asp-action="Product" asp-route-id="@item.ProductId" class="bg-primary rounded-circle p-2 text-white d-inline-flex position-absolute bottom-0 end-0 mb-n3 me-3"
                       data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Add To Cart">
                        <i class="ti ti-basket fs-4"></i>
                    </a>
                </div>
                <div class="card-body">
                    <a asp-action="Product" asp-route-id="@item.ProductId">
                        <h6 class="fw-semibold fs-3">@item.ProductName</h6>
                    </a>
                    <div class="d-flex align-items-center justify-content-between">
                        <h6 class="fw-semibold fs-2 mb-0">@item.ProductPrice₹</h6>
                    </div>
                </div>
            </div>
        </div>
    }
</div>