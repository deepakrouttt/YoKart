@using Domain.Models
@model Category
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
@{
    ViewData["Title"] = "Edit";
}

<div class="">
    <h2 class="text-primary">Edit Category</h2>
    <hr />
</div>

<form method="post" class="mb-5" asp-action="Edit" asp-controller="Category">
    <div class="border p-2 mt-1">
        <div class="form-group">
            <input asp-for="CategoryId" class="form-control p-1" type="hidden" />
        </div>
        <div class="form-group">
            <label asp-for="CategoryName" class="inline">Category Name</label>
            <input asp-for="CategoryName" class="form-control p-1" />
            <span asp-validation-for="CategoryName" class="text-danger small"></span>
        </div>

        @for (int i = 0; i < Model.SubCategories.Count; i++)
        {
            <div class="form-group">
                <input asp-for="SubCategories[i].SubCategoryName" class="form-control p-1" type="hidden"/>
            </div>
        }

        <button type="submit" class="btn btn-primary mt-2">Update Category</button>
        <a asp-action="Index" asp-controller="Category" class="btn btn-primary mt-2 ms-4 ">Back</a>
    </div>
</form>
