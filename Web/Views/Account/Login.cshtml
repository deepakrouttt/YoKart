@using Domain.Models
@model LoginUser
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - YoKart</title>

    <link rel="shortcut icon" type="image/png" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/css/styles.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="yokart-bg">

    <div class="container w-100">
        <div class="row justify-content-center">
            <div class="col-12">

                <!-- Updated YoKart Card Wrapper -->
                <div class="d-flex bg-white yokart-card">

                    <!-- LEFT PANEL -->
                    <div class="col-md-6 yokart-left p-5 d-flex flex-column justify-content-center text-center">
                        <img src="~/images/logos/yokart.png" width="125" class="mb-3" />

                        <h1 class="yokart-title mb-2">YoKart</h1>

                        <p class="text-muted fs-5">
                            Your one-stop destination for smart online shopping.
                        </p>

                        <p class="yokart-footer mt-auto">
                            © @DateTime.Now.Year YoKart. All rights reserved.
                        </p>
                    </div>

                    <!-- RIGHT PANEL -->
                    <div class="col-md-6 p-5 d-flex align-items-center justify-content-center">
                        <div style="max-width: 380px; width: 100%;">
                            <h3 class="text-center fw-bold mb-4 yokart-title">Sign In</h3>

                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                <div class="mb-3">
                                    @Html.Label("Username", "Username", new { @class = "form-label fw-semibold" })
                                    @Html.TextBox("Username", null, new { @class = "form-control" })
                                </div>

                                <div class="mb-3">
                                    @Html.Label("Password", "Password", new { @class = "form-label fw-semibold" })
                                    @Html.Password("Password", null, new { @class = "form-control" })
                                </div>

                                <div class="d-flex justify-content-between mb-3">
                                    <div class="form-check">
                                        @Html.CheckBox("rememberMe", true, new { @class = "form-check-input" })
                                        @Html.Label("rememberDevice", "Remember this device", new { @class = "form-check-label" })
                                    </div>

                                    <a href="#">Forgot Password?</a>
                                </div>

                                <button type="submit" class="btn yokart-btn w-100 py-2 fs-5">Login</button>

                                <div class="text-center mt-3">
                                    <span>New to YoKart?</span>
                                    <a href="#" class="ms-1">Create an account</a>
                                </div>
                            }
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</body>




</html>
