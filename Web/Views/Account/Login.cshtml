@using Domain.Models
@model LoginUser
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - YoKart</title>

    <link rel="shortcut icon" type="image/png" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/css/styles.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>

<body class="bg-light">

    <div class="container min-vh-100 d-flex justify-content-center align-items-center">
        <div class="row w-100" style="max-width: 1200px;">

            <div class="col-12">
                <div class="d-flex bg-white rounded-4 shadow p-0" style="border: 1px solid #e5e5e5; min-height: 500px;">

                    <!-- LEFT PANEL -->
                    <div class="col-md-6 d-flex flex-column justify-content-center align-items-center text-center p-5 border-end">
                        <img src="~/images/logos/yokart.png" width="120" class="mb-3" alt="YoKart Logo" />

                        <h1 class="fw-bold mb-2">YoKart</h1>
                        <p class="text-muted fs-5 mb-4">
                            Your one-stop destination for smart online shopping.
                        </p>

                        <p class="text-secondary mt-auto mb-0">
                            &copy; @DateTime.Now.Year YoKart. All rights reserved.
                        </p>
                    </div>

                    <!-- RIGHT PANEL -->
                    <div class="col-md-6 d-flex justify-content-center align-items-center p-5">
                        <div class="w-100" style="max-width: 380px;">

                            <h3 class="text-center mb-4 fw-bold">Sign In</h3>

                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                <div class="mb-3">
                                    @Html.Label("Username", "Username", new { @class = "form-label fw-semibold" })
                                    @Html.TextBox("Username", null, new { @class = "form-control", type = "text" })
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    @Html.Label("Password", "Password", new { @class = "form-label fw-semibold" })
                                    @Html.Password("Password", null, new { @class = "form-control" })
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="form-check">
                                        @Html.CheckBox("rememberMe", true, new { @class = "form-check-input", id = "rememberDevice" })
                                        @Html.Label("rememberDevice", "Remember this device", new { @class = "form-check-label" })
                                    </div>

                                    <a href="#" class="text-primary fw-semibold">Forgot Password?</a>
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-2 fs-5 rounded-2 mb-3">Login</button>

                                <div class="text-center">
                                    <span class="fw-semibold">New to YoKart?</span>
                                    <a href="#" class="text-primary fw-bold ms-1">Create an account</a>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

</body>


</html>
