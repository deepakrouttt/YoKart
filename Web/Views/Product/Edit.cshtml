@using Domain.Global
@using Domain.Models
@model Product
@{
    ViewData["Title"] = "View";
    var categories = ViewData["Categories"] as List<Category>;
    var subcategories = ViewData["Subcategories"] as List<SubCategory>;
}

<h4>Edit Product</h4>
<hr />

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="border p-2 mt-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="ProductId" class="form-control" hidden />
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-control CategoryDropDown" onchange="getSubCategories()">
                @foreach (var category in categories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SubCategoryId" class="control-label">SubCategory Name</label>
            <select asp-for="SubCategoryId" class="form-control SubCategoryDropDown">
                @foreach (var subcategory in subcategories)
                {
                    <option value="@subcategory.SubCategoryId">@subcategory.SubCategoryName</option>
                }
            </select>
            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductName" class="control-label">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div style="display:flex;">
            <div class="form-group" id="Image">
                <label asp-for="ProductImage" class="control-label">Product Image</label><br />
                <img src="~/images/products/@Model.ProductImage" alt="Product Image" width="80" height="100" />
                <input asp-for="ProductImage" class="form-control" hidden />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group" id="Imagefile">
                <label asp-for="ProductImageFile" class="control-label">Product Image</label>
                <input asp-for="ProductImageFile" class="form-control" type="file" />
                <span asp-validation-for="ProductImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" id="btn-image" class="btn btn-primary" style="height:40px;margin:18px 13px 0px">Upload</button>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductPrice" class="control-label">Product Price</label>
            <input asp-for="ProductPrice" class="form-control" />
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductDescription" class="control-label"></label>
            <input asp-for="ProductDescription" class="form-control" />
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary mt-2" id="submit"/>
        </div>
    </div>
</form>


<div>
    <a asp-action="Index" class="btn btn-light float-end mt-2">List Product</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    $(document).ready(function () {
        $("#Imagefile").hide();

        var state = true;
        $("#btn-image").click(function () {
            if (state) {
                $("#Imagefile").show();
                $("#Image").hide();
                $('form').attr('action', '/Product/EditImage');
            } else {
                $("#Image").show();
                $("#Imagefile").hide();
                $('form').attr('action', '/Product/Edit');
            }
            state = !state;
        });
       
    });

</script>

