@using Domain.Global
@using Domain.Models
@model Product
@{
    ViewData["Title"] = "Create";
    var categories = YokartVar.categories as List<Category>;
}
<h4>Add Product</h4>
<hr />
<div class="col-md-4">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="CategoryId" class="control-label">Category Name</label>
            <select asp-for="CategoryId" class="form-control CategoryDropDown">
                <option disabled selected>Choose Here</option>
                @foreach (var category in categories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SubCategoryId" class="control-label">SubCategory Name</label>
            <select asp-for="SubCategoryId" class="form-control SubCategoryDropDown">
                <option disabled selected>Choose Here</option>
            </select>
            <span asp-validation-for="SubCategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductName" class="control-label">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductImageFile" class="control-label">Product Image</label>
            <input asp-for="ProductImageFile" class="form-control" type="file" />
            <span asp-validation-for="ProductImageFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductPrice" class="control-label">Product Price</label>
            <input asp-for="ProductPrice" class="form-control" />
            <span asp-validation-for="ProductPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProductDescription" class="control-label">Product Discription</label>
            <input asp-for="ProductDescription" class="form-control" />
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Add" class="btn btn-secondary  btn-rounded me-4" />
            <a asp-action="Index" class="btn btn-primary">Back</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
