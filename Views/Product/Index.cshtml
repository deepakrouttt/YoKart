@model IEnumerable<YoKart.Models.Product>
@{
    ViewData["Title"] = "Index";
    var categories = ViewData["categories"] as List<Category>;
    var subcategories = ViewData["subcategories"] as List<SubCategory>;
    var pageCount = myVar.pageCount;
    var currentPage = myVar.currentPage;
}
<div class="container">
    <hr />
    <div class="d-flex justify-content-between">
        <a asp-controller="Product" asp-action="Create" class="btn btn-success">Create New</a>
        <div style="display:inline-flex">
            <label class="m-2">Price</label>
            <select class="form-control" id="priceRange" style="cursor:pointer;">
                <option selected>Any</option>
                <option data-low="98" data-high="500">100-500</option>
                <option data-low="498" data-high="700">500-700</option>
                <option data-low="698" data-high="1000">700-1000</option>
                <option data-low="1000" data-high="">1000-upto</option>
            </select>
        </div>
    </div>
    <br />
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => categories.FirstOrDefault(m => m.CategoryId == model.CategoryId).CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => subcategories.FirstOrDefault(m => m.SubCategoryId == model.SubCategoryId).SubCategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductImage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th width="30%">
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody id="partial-container">
            @Html.Partial("_Index")
        </tbody>
    </table>

    <div class="pager" id="pager-container">
        @for (var i = 1; i <= pageCount; i++)
        {
            <a href="#" data-page="@i" class="pager-link @(i == currentPage ? "active" : "") border btn p-1">@i</a>
        }
    </div>
</div>
<script>
    $(function () {
        $("table th").click(function () {
            var Sort = $(this).html().trim();
            var page = $("#currentPage").val();
            var LowRange = $("#priceRange").find(':selected').data('low') ?? 0;
            var HighRange = $("#priceRange").find(':selected').data('high');
            debugger;
            $.ajax({
                url: 'Index_Partial',
                type: 'GET',
                data: {
                    page: page,
                    LowRange: LowRange,
                    HighRange: HighRange,
                    Sort: Sort,
                },
                success: function (data) {
                    $('#partial-container').html(data);
                },
                error: function (error) {
                    $("body").html(error);
                }
            });
        })
    })
</script>

