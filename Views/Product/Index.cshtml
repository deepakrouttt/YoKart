@model IEnumerable<YoKart.Models.Product>
@{
    ViewData["Title"] = "Index";
    var categories = ViewData["categories"] as List<Category>;
    var subcategories = ViewData["subcategories"] as List<SubCategory>;
    var pageCount = myVar.pageCount;
    var currentPage = myVar.currentPage;
}
<div class="container">
    <hr />
    <div class="d-flex justify-content-between">
        <a asp-controller="Product" asp-action="Create" class="btn btn-success">Create New</a>
        <div style="display:inline-flex">
            <label class="m-2">Price</label>
            <select class="form-control" id="priceRange" style="cursor:pointer;">
                <option selected>Any</option>
                <option data-low="100" data-high="500">100-500</option>
                <option data-low="500" data-high="700">500-700</option>
                <option data-low="700" data-high="1000">700-1000</option>
            </select>
        </div>
    </div>
    <br />
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => categories.FirstOrDefault(m => m.CategoryId == model.CategoryId).CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => subcategories.FirstOrDefault(m => m.SubCategoryId == model.SubCategoryId).SubCategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductImage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th width="30%">
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody id="partial-container">
            @Html.Partial("_Index")
        </tbody>
    </table>

    <div class="pager" id="pager-container">
        @for (var i = 1; i <= pageCount; i++)
        {
            <a href="#" data-page="@i" class="pager-link @(i == currentPage ? "active" : "") border btn p-1">@i</a>
        }
    </div>
</div>
<script>
    $(function () {
        $(document).on('change', '#priceRange', function () {
            var LowRange = $(this).find(':selected').data('low');
            var HighRange = $(this).find(':selected').data('high');
            debugger;
            $.ajax({
                url: 'Index_Partial',
                type: 'GET',
                data: { page: @currentPage, low: LowRange, high: HighRange },
                success: function (data) {
                    $('#partial-container').html(data);
                    pagerCreate();
                }
            });
        });
    })
    function pagerCreate() {
        var html = "";
        var pageCount = $("#pageCount").val();
        console.log(pageCount);
        for (i = 1; i <= pageCount; i++) {
            html += `<a href="#" data-page="${i}" class="pager-link  ${i == @myVar.currentPage ? "active" : ""} border btn p-1 m-1">${i}</a>`;
        }
        $("#pager-container").html(html);
        PagerEvent();//paging function calling if we create a pager dynamic dynamic binding
    }
</script>