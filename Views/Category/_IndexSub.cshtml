@model Category
<input type="hidden" id="pageCount" value="@myVar.pageCount" />
<input type="hidden" id="TotalRecord" value="@myVar.Total" />
@for (int i = 0; i < Model.SubCategories.Count; i++)
{
    <tr>
        <td>
            <div class="form-group">
                @Model.SubCategories[i].SubCategoryName
            </div>
        </td>
        <td>
            <a asp-action="EditSub" asp-route-id="@Model.SubCategories[i].SubCategoryId" class="btn btn-primary">Edit</a>
        </td>
        <td>
            <a asp-action="DeleteSub" asp-route-id="@Model.SubCategories[i].SubCategoryId" class="btn btn-success" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
        </td>
    </tr>
}
