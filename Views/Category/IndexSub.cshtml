@model Category
@{
    ViewData["Title"] = "SubCategory";
}
<form method="post" >
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    SubCategory Name
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.SubCategories.Count; i++)
            {
                <tr>
                    <td>
                        <div class="form-group">
                            @Model.SubCategories[i].SubCategoryName
                        </div>
                    </td>
                    <td>
                        <a asp-action="EditSub" asp-route-id="@Model.SubCategories[i].SubCategoryId" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-action="DeleteSub" asp-route-id="@Model.SubCategories[i].SubCategoryId" class="btn btn-success">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
     <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Back</a>
</form>
